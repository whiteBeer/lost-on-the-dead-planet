{
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
